<%- include ("partials/header") %>

<div class="ui segment main text container">
	<div class="ui huge header">
		Edit <%= blog.title %>
	</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" value="<%= blog.title %>" name="blog[title]" required>
		</div>
		
		<div class="field">
			<label>Image</label>
			<input type="text" value="<%= blog.image %>" name="blog[image]" required>
		</div>
		
		<div class="field">
			<label>Blog Post Content</label>
			<textarea name="blog[body]" required><%= blog.body %></textarea>
		</div>
		<input type="submit" class="ui button violet">
	</form>
</div>

<%- include ("partials/footer") %>